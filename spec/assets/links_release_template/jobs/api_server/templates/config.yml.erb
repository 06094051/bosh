---
databases:
  main:
<% link('db.nodes').each do |node| %>
  - name: <%= node['name'] %>
    networks:
    <% node['networks'].each do |network_name, network_settings| %>
      - name: <%= network_name %>
        address: <%= network_settings['address'] %>
    <% end %>
<% end %>
  backup:
<% link('backup_db.nodes').each do |node| %>
  - name: <%= node['name'] %>
    availability_zone: <%= node['availability_zone'] %>
    networks:
    <% node['networks'].each do |network_name, network_settings| %>
      - name: <%= network_name %>
        address: <%= network_settings['address'] %>
    <% end %>
<% end %>
