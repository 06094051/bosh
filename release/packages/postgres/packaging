set -e

archive="postgresql-9.0.23.tar.gz"

if [[ -f postgres/$archive ]] ; then
  echo "Archive found"
else
  echo "Archive not found"
  exit 1
fi

echo "Extracting archive..."
mkdir unpacked

(
  set -e
  cd unpacked
  tar xzf ../postgres/$archive

  if [[ $? != 0 ]] ; then
    echo "Cannot unpack PostgreSQL"
    exit 1
  fi
)

cp -a unpacked/* ${BOSH_INSTALL_TARGET}
