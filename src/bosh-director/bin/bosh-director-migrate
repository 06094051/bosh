#!/usr/bin/env ruby

require 'logger'
require 'optparse'
require 'bosh/director'
require 'db_migrator'

config_file = nil

opts = OptionParser.new do |op|
  op.on('-c', '--config FILE', 'configuration file') do |opt|
    config_file = opt
  end
end

opts.parse!(ARGV.dup)

if config_file.nil?
  puts opts
  exit 1
end

config = Bosh::Director::Config.load_file(config_file)
director_db = config.db
abort 'Director database config missing from config file' unless director_db
dns_db = config.configure_db(config.dns_db) if config.dns_db

DBMigrator.new(director_db, :director).migrate
DBMigrator.new(dns_db, :dns).migrate
DBMigrator.new(director_db, :cpi, cpi: config.cloud_options['plugin']).migrate
